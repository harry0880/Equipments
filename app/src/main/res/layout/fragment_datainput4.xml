<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.equipments.MainActivity"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <!-- <com.rengwuxian.materialedittext.MaterialAutoCompleteTextView
         android:id="@+id/etInstType"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:ms_floatingLabelColor="#303F9F"
         app:met_floatingLabel="highlight"
         android:inputType="none"
         android:hint="Institute Type"
         android:paddingTop="10dp"/>-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303F9F"
        android:text="Equipment"/>
    <View
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#303F9F" />
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spEquipment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:hintText="Select Equipment Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303F9F"
        android:text="Category"/>
    <View
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#303F9F" />
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:hintText="Select Equipment Category"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303F9F"
        android:text="Manufacturer Name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#303F9F" />
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spManufacturer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:hintText="Select Manufacturer Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303F9F"
        android:text="Supplier Name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#303F9F" />
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spSupplier"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:hintText="Select Supplier Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303F9F"
        android:text="Model Name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:background="#303F9F" />
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spModel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnProceed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/colorPrimaryDark"
        fancy:fb_focusColor="@color/colorPrimary"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="Proceed"
        fancy:fb_textColor="#FFFFFF"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        />
  </LinearLayout>
  </ScrollView>